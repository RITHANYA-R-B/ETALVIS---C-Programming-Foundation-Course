// Get a number and print the reverse of it using function (with a return value)
#include<stdio.h>
int disp_reverse_number(int x);
int main(){
    int x;
    scanf("%d",&x);
    int r=disp_reverse_number(x);
    printf("%d",r);
    return 0;
}
int disp_reverse_number(int x){
    int r=0;
    for(;x>0;x=x/10)
        r=r*10+x%10;
    return r;
}
