// Get a number and print the total count of odd digits in the number (using functions)
#include<stdio.h>
void disp_total_odd_digits(int x);
int main(){
    int x;
    scanf("%d",&x);
    disp_total_odd_digits(x);
    return 0;
}
void disp_total_odd_digits(int x){
    int n=0;
    for(;x>0;x=x/10)
        if(x%2==1)
            n++;
    printf("%d",n);
}
