// Get a number and interchange the first and the last digit.
#include<stdio.h>
#include<math.h>
int main()
{
    int x,n=0,m;
    printf("Enter Number: ");
    scanf("%d",&x);
    if(x>=0&&x<10)
    printf("%d",x);
    else{
    m=x;
    printf("%d",x%10);
    loop: if(m>0){
        m=m/10;
        n=n+1;
        goto loop;
    }
    x=x/10;
    int k=pow(10,n-2);
    printf("%d%d",x%k,x/k);
    }
    return 0;
}
