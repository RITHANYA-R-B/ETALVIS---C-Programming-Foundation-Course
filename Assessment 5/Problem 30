// Get two numbers and print the HCF of those numbers using for loop
#include<stdio.h>
int main(){
    int x,y;
    printf("Enter Two Numbers: ");
    scanf("%d%d",&x,&y);
    int i=x>y?y:x;
    for(i;;i--){
        if(x==0 && y==0){
            break;
        }
        if(x==0 || y==0){
            if(x==0)
                printf("%d",y);
            else
                printf("%d",x);
            break;
        }
        if(x%i==0 && y%i==0){
            printf("%d",i);
            break;
        }
    }
    return 0;
}
